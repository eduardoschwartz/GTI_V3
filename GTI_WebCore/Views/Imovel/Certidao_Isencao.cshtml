@model GTI_WebCore.ViewModels.CertidaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Certidão de Isenção";
}



<label style="color:brown;font-size:16px;font-style:italic">Certidão de Isenção de IPTU</label>
<br />



<form asp-controller="Imovel" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()" asp-action="Certidao_Isencao" class="mt-3" style="margin-left:18px">
    <div class="form-group row">
        <label asp-for="Inscricao"> </label>
        <div class="col-sm-10">
            <input asp-for="Inscricao" id="codigo" class="form-control" style="max-width:100px;max-height:25px;overflow:auto;" onKeyPress="return formata(this, '§§§§§§', event)" onchange="ClearError()">
        </div>
        <br />


    </div>
    <div class="form-group row">
        <label>Chave de autenticação</label>
        <div class="col-sm-10">
            <input asp-for="Chave" id="chave" class="form-control" style="max-width:200px;max-height:25px;overflow:auto;" onchange="ClearError()">
        </div>
    </div>

    <br />
    <div class="form-group row">
        <div class="input-group">
            <div class="input-group-prepend">
                <img id="img-captcha" src="~/Empresa/get-captcha-image" title="Clique para atualizar" />
            </div>
            &nbsp;<input type="text" class="form-control" asp-for="CaptchaCode" maxlength="4" id="captchaTxt" />
            &nbsp;<span asp-validation-for="CaptchaCode" class="text-danger"></span>

            <div class="col-sm-10">
                &nbsp;&nbsp;<button type="submit" class="green_button" formaction="Certidao_Isencao"> Imprimir</button>
            </div>
        </div>

    </div>
    <div class="form-group row">
        <label class="text-danger" id="errorLabel"></label>
    </div>
</form>

<br />
<div class="form-group row">
    &nbsp;&nbsp;<label class="text-danger" id="errorLabel">@ViewBag.Result</label>
</div>

<br />
@Html.ActionLink("Consultar outro tipo de certidão", "Certidao", "Home")<br />
@Html.ActionLink("Retornar ao menu principal", "Index", "Home")



@section scripts{

    <script type="text/javascript">

        function ValidateForm() {
            var _cod = document.getElementById('codigo').value;
            var _captcha = document.getElementById('captchaTxt').value;
            var _chave = document.getElementById('chave').value;

            if ((_cod == "" || parseInt(_cod) == 0) && _chave == "") {
                document.getElementById('errorLabel').innerHTML = "Digite a inscrição municipal ou a chave de autenticação da certidão";
                return false;
            }

            if (_captcha == "") {
                document.getElementById('errorLabel').innerHTML = "Digite o código de validação!";
                return false;
            } else {
                return true;
            }

        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

        $("#img-captcha").click(function () {
            resetCaptchaImage();
        });

        function resetCaptchaImage() {
            d = new Date();
            /**/
            $("#img-captcha").attr("src", "/Empresa/get-captcha-image?" + d.getTime());
            /**/
        }

    </script>}