@model GTI_WebCore.ViewModels.CertidaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Certidão de Endereço";
}



<label style="color:brown;font-size:16px;font-style:italic">Certidão de Endereço</label>
<br />



<form asp-controller="Imovel" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()" asp-action="Details" class="mt-3" style="margin-left:18px">
    <div class="form-group row">
        <label asp-for="Inscricao"> </label>
        <div class="col-sm-10">
            <input asp-for="Inscricao" id="codigo" class="form-control" style="max-width:100px;max-height:25px;overflow:auto;" onKeyPress="return formata(this, '§§§§§§', event)" onchange="ClearError()">
        </div>
    </div>

    <br />
    <div class="form-group row">
        <div class="input-group">
            <div class="input-group-prepend">
                <img id="img-captcha" src="~/Imovel/Certidao_Endereco/get-captcha-image" title="Clique para atualizar" />
            </div>
            &nbsp;<input type="text" class="form-control" asp-for="CaptchaCode" maxlength="4" id="captchaTxt" />
            &nbsp;<span asp-validation-for="CaptchaCode" class="text-danger"></span>

            <div class="col-sm-10">
                &nbsp;&nbsp;<button type="submit" class="green_button"> Consultar</button>
            </div>

        </div>

    </div>
    <div class="form-group row">
        <label class="text-danger" id="errorLabel"></label>
    </div>
</form>




