@section scripts{

    <script type="text/javascript">

        function ValidateForm() {
            var _cod = document.getElementById('codigo').value;
            var _captcha = document.getElementById('captchaTxt').value;

            if (_cod == "" || parseInt(_cod) == 0) {
                document.getElementById('errorLabel').innerHTML = "Digite o código do imóvel!";
                return false;
            }
            else {
                if (_captcha == "") {
                    document.getElementById('errorLabel').innerHTML = "Digite o código de validação!";
                    return false;
                } else {
                    return true;
                }
            }
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

        $("#img-captcha").click(function () {
            resetCaptchaImage();
        });

        function resetCaptchaImage() {
            d = new Date();
            $("#img-captcha").attr("src", "/Empresa/Details/get-captcha-image?" + d.getTime());
        }

    </script>}