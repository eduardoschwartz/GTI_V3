@model GTI_WebCore.ViewModels.CertidaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Certidão de Inscrição";
}




@*<form asp-controller="Empresa" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()" asp-action="Details" class="mt-3" style="margin-left:18px">*@
    <form asp-controller="Empresa" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()" class="mt-3">

        <div class="form-group"><label style="color:brown;font-size:16px;font-style:italic">Certidão de Inscrição</label></div>
  

        <div class="form-group row align-items-lg-baseline">
            CPF:&nbsp; <input type="radio" required asp-for="CpfCnpjLabel" id="cpfCheck" value="cpf" name="doc" checked="checked" onclick="radioCheck()" />
            &nbsp;CNPJ:&nbsp;  <input type="radio" required asp-for="CpfCnpjLabel" id="cnpjCheck" value="cnpj" name="doc" onclick="radioCheck()" />
            &nbsp;<input asp-for="CpfValue" id="cpfTxt" class="form-control" style="max-width:200px;max-height:25px;" onKeyPress="return formata(this, '§§§.§§§.§§§-§§', event)" onchange="ClearError()" placeholder="Digite o nº do CPF">
            &nbsp;<input asp-for="CnpjValue" id="cnpjTxt" class="form-control" style="max-width:200px;max-height:25px;display:none" onKeyPress="return formata(this, '§§.§§§.§§§/§§§§-§§', event)" onchange="ClearError()" placeholder="Digite o nº do CNPJ">
        </div>
        <div class="form-group row">
            <div>
                <label asp-for="Inscricao"> </label>

                @{ List<int> _lista_codigos = new List<int>();
                    if (ViewBag.Lista_Codigo != null) {
                        _lista_codigos = ViewBag.Lista_Codigo;
                    }
                }
                &nbsp;@Html.DropDownListFor(m => m.Inscricao, new SelectList(_lista_codigos), new { style = "width:100px;height:25px" })

            </div>
        </div>

        <input type="button" value="Verificar" title="Retorna as incrições municipais atreladas ao CPF/CNPJ informado." style="margin-left:-15px" class="green_button" onclick="location.href='@Url.Action("Retorna_Codigos", "Empresa")'" />
        <br />
        <br />
        <div class="form-group">
            <input type="checkbox" asp-for="@Model.Extrato" title="Marque esta opção para exibir o resumo dos pagamentos na certidão" style="margin-left:-15px" />
            <label>Exibir o resumo dos pagamentos na certidão</label>
        </div>


        <div class="form-group row align-items-lg-baseline">
            <div>
                <div class="input-group">
                    <img id="img-captcha" src="~/Empresa/get-captcha-image" title="Clique para atualizar" />
                    &nbsp;<input type="text" class="form-control" -asp-for="CaptchaCode" maxlength="4" id="captchaTxt" style="width:100px" />
                    &nbsp;<button type="submit" title="Imprimir a certidão" class="green_button" formaction="Certidao_Inscricao" formmethod="post"> Consultar</button>
                </div>
            </div>

        </div>
        <br />
        <div style="border:1px solid black;width:350px;margin:-15px">
            <label style="color:brown;font-size:16px;font-style:italic;margin-left:10px">Autenticar a Certidão</label>
            <br />

            <div class="form-group row align-items-lg-baseline">
                <div class="input-group">
                    <label style="margin-left:20px">Chave</label>
                    &nbsp;<input asp-for="Chave" id="chave" class="form-control" style="max-width:160px;max-height:25px;" onchange="ClearError()">
                    &nbsp;<button class="green_button" type="submit" title="Validar a certidão." formaction="Validate_CI" formmethod="post">Validar</button>
                </div>
                @*<div>
                    <input type="submit" title="Validar a certidão." formaction="Validate_CI" formmethod="post" class="green_button" />
                    <input type="submit" title="Validar a certidão." class="green_button" name="cancel" value="Cancel" onclick="location.href='@Url.Action("Validate_CI", "Empresa")'" />
                </div>*@
            </div>
            
        </div>    
        <div class="form-group row">
            <label class="text-danger" id="errorLabel"></label>
        </div>
    </form>


    <br />
    <div class="form-group row">
        &nbsp;&nbsp;<label class="text-danger" id="errorLabel">@ViewBag.Result</label>
    </div>

    @Html.ActionLink("Consultar outro tipo de certidão", "Certidao", "Home")<br />
    @Html.ActionLink("Retornar ao menu principal", "Index", "Home")



    @section scripts{

        <script type="text/javascript">
            function radioCheck() {
                document.getElementById('cnpjTxt').value = "";
                document.getElementById('cpfTxt').value = "";
                if (document.getElementById('cpfCheck').checked) {
                    document.getElementById('cpfTxt').style.display = 'block';
                }
                else {
                    document.getElementById('cpfTxt').style.display = 'none';
                }
                if (document.getElementById('cnpjCheck').checked) {
                    document.getElementById('cnpjTxt').style.display = 'block';
                }
                else {
                    document.getElementById('cnpjTxt').style.display = 'none';
                }
            }

            function ValidateForm() {
                var _cod = document.getElementById('codigo').value;
                var _cpf = document.getElementById('cpfTxt').value;
                var _cnpj = document.getElementById('cnpjTxt').value;
                var _captcha = document.getElementById('captchaTxt').value;

                if ((_cod == "" || parseInt(_cod) == 0) && _cpf == "" && _cnpj == "") {
                    document.getElementById('errorLabel').innerHTML = "Digite ao menos um dos campos!";
                    return false;
                }
                else {
                    if (parseInt(_cod) > 0 && (_cpf != "" || _cnpj != "")) {
                        document.getElementById('errorLabel').innerHTML = "Digite a inscrição municipal ou o Cpf ou o CNPJ!";
                        return false;
                    } else {
                        if (_captcha == "") {
                            document.getElementById('errorLabel').innerHTML = "Digite o código de validação!";
                            return false;
                        } else {
                            return true;
                        }
                    }
                }
            }

            function ClearError() {
                document.getElementById('errorLabel').innerHTML = "";
            }

            $("#img-captcha").click(function () {
                resetCaptchaImage();
            });

            function resetCaptchaImage() {
                d = new Date();
                $("#img-captcha").attr("src", "/Empresa/get-captcha-image?" + d.getTime());
            }

        </script>
    }
