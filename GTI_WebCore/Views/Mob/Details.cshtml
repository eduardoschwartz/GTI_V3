@model GTI_WebCore.ViewModels.EmpresaDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhe de uma empresa";
}

@section scripts{
    <script type="text/javascript">
        function radioCheck() {
            if (document.getElementById('cpfCheck').checked) {
                document.getElementById('cpfTxt').style.display = 'block';
            }
            else document.getElementById('cpfTxt').style.display = 'none';
            if (document.getElementById('cnpjCheck').checked) {
                document.getElementById('cnpjTxt').style.display = 'block';
            }
            else document.getElementById('cnpjTxt').style.display = 'none';
        }


        function ValidateForm() {
            var _cod = document.getElementById('codigo');
            var _cpf = document.getElementById('cpfTxt');
            var _cnpj = document.getElementById('cpfTxt');
            if (_cod.value == "" && _cpf.Value == "" && _cnpj.Value == "") {
                alert("erro");
                return false;
            }
            else {
                return true;
            }
}

    </script>
}



<label style="color:brown;font-size:16px;font-style:italic">Detalhes de uma empresa</label>
<br />


<form asp-controller="Mob" enctype="multipart/form-data" method="post" onsubmit="ValidateForm()" asp-action="Details" class="mt-3">
    <div class="form-group row">
        <label asp-for="Inscricao"> </label>
        <div class="col-sm-10">
            <input asp-for="Inscricao" id="codigo" class="form-control" style="max-width:100px;max-height:25px;overflow:auto;" onKeyPress="return formata(this, '§§§§§§', event)">
        </div>
    </div>

    <div class="form-group row align-items-lg-baseline">
        CPF:&nbsp; <input type="radio" required asp-for="CpfCnpjLabel" id="cpfCheck" value="cpf" name="doc" checked="checked" onclick="radioCheck()" />
        &nbsp;CNPJ:&nbsp;  <input type="radio" required asp-for="CpfCnpjLabel" id="cnpjCheck" value="cnpj" name="doc" onclick="radioCheck()" />
        &nbsp;<input asp-for="CpfValue" id="cpfTxt" class="form-control" style="max-width:200px;max-height:25px;" onKeyPress="return formata(this, '§§§.§§§.§§§-§§', event)" placeholder="Digite o nº do CPF">
        &nbsp;<input asp-for="CnpjValue" id="cnpjTxt" class="form-control" style="max-width:200px;max-height:25px;display:none" onKeyPress="return formata(this, '§§.§§§.§§§/§§§§-§§', event)" placeholder="Digite o nº do CNPJ">
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success" > Consultar</button>
        </div>
    </div>
</form>




